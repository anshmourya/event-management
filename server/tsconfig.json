{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src/.",
		"paths": {
			"@config/*": ["config/*"],
			"@controller/*": ["controller/*"],
			"@routes/*": ["routes/*"],
			"@schema/*": ["schema/*"],
			"@middelware/*": ["middelware/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"lib": ["es2015"]
}
